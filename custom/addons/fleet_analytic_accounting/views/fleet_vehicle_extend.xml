<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="fleet_vehicle_online_booking_extend" model="ir.ui.view">
        <field name="name">fleet.vehicle.form</field>
        <field name="model">fleet.vehicle</field>
        <field name="inherit_id" ref="fleet.fleet_vehicle_view_form"/>
        <field name="arch" type="xml">
<!--            <xpath expr="//form" position="attributes">-->
<!--                <attribute name="create">0</attribute>-->
<!--            </xpath>-->
            <xpath expr="//field[@name='vin_sn']" position="after" >
                <field name="model_year"/>
                <field name="vehicle_prodcut_template_id" string="Vehicle Type" invisible="1"/>
                <field name="vehicle_type_str" string="Vehicle Type"/>
                <field name="location" />
            </xpath>
            <xpath expr="//field[@name='released_date']" position="before" >
                <field name="online_booking" class="oe_inline"/>
<!--                <field name="registration_number" />-->
            </xpath>
            <xpath expr="//field[@name='released_date']" position="after" >
                <field name="registration_expiry" />
                <field name="registration_cost" />
            </xpath>
            <xpath expr="//field[@name='active_contract']" position="after" >
                <field name="color_vehicle"  string="Color"/>
<!--                widget="colorpicker"-->
            </xpath>
            <xpath expr="//field[@name='acquisition_date']" position="attributes" >
                <attribute name="string">Acquisition Date</attribute>
            </xpath>
            <xpath expr="//field[@name='released_date']" position="attributes" >
                <attribute name="readonly">1</attribute>
                <attribute name="string">Registration Date</attribute>
            </xpath>
            <xpath expr="//field[@name='reg_id']" position="attributes" >
                <attribute name="readonly">1</attribute>
            </xpath>
        </field>
    </record>

    <record id='fleet.fleet_vehicle_action' model='ir.actions.act_window'>
        <field name="name">Vehicles</field>
        <field name="res_model">fleet.vehicle</field>
        <field name ="view_mode">kanban,tree,form,graph,calendar</field>
        <field name="context">{'create': 0}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Ready to manage your fleet more efficiently
            </p><p>
                Let's create your first vehicle.
            </p>
        </field>
    </record>
<!--    Inheritance Filter here-->
     <record id="fleet_vehicle_view_search_inherit" model="ir.ui.view">
            <field name="name">fleet.vehicle.search.inherit</field>
            <field name="model">fleet.vehicle</field>
            <field name="inherit_id" ref="fleet.fleet_vehicle_view_search"/>
            <field name="arch" type="xml">
                <!-- New filters -->
                <xpath expr="//filter[@name='available']" position="replace">
                    <filter string="Available" name="available" domain="[('state_id.name', '=', 'Available')]"/>
                    <filter string="In Workshop" name="in workshop" domain="[('state_id.name', '=', 'In Workshop')]"/>
                    <filter string="In shop" name="in shop" domain="[('state_id.name', '=', 'In shop')]"/>
                    <filter string="Registered" name="registered" domain="[('state_id.name', '=', 'Registered')]"/>
                    <filter string="Inactive" name="inactive" domain="[('state_id.name', '=', 'Inactive')]"/>
                    <filter string="Rent" name="rent" domain="[('state_id.name', '=', 'Rent')]"/>
                    <filter string="Sold" name="sold" domain="[('state_id.name', '=', 'Sold')]"/>
                    <filter string="Reserved" name="reserved" domain="[('state_id.name', '=', 'Reserved')]"/>
                    <filter string="Replaced" name="replaced" domain="[('state_id.name', '=', 'Replaced')]"/>
                </xpath>
                <!-- Hide filters -->
                <xpath expr="//filter[@name='planned']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//filter[@name='alert_true']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//group/filter[@name='groupby_make']" position="after">
                    <filter string="Type" name="groupby_type" context="{'group_by': 'vehicle_type_str'}"/>
                </xpath>
            </field>
        </record>
