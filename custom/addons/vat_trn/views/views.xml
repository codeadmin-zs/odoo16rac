<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="res_users_form_view_details" model="ir.ui.view">
            <field name="name">res.company.form.vat_configs.inherit</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form" />
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page name="tax" string="TAX">
                        <group>
                            <field name="vat_enabled" invisible="1" />
                            <field name="taxable_name_english" attrs="{'required': [('vat_enabled','!=', False)]}"/>
                            <field name="company_name_arabic" attrs="{'required': [('vat_enabled','!=', False)]}"/>
                            <field name="vat_tax" />
                            <field name="tax_agency_name" />
                            <field name="tan" />
                            <field name="tax_agent_name" />
                            <field name="taan" />
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
        <record id="view_country_form_inherit" model="ir.ui.view">
            <field name="name">base.view_country_form_inherit</field>
            <field name="model">res.country</field>
            <field name="inherit_id" ref="base.view_country_form" />
            <field name="arch" type="xml">
                <field name="code" position="after">
                     <field name="vat_enabled" />
                </field>
            </field>
        </record>
        <record id="res_users_form_view" model="ir.ui.view">
            <field name="name">res.partner.form.view</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='vat']" position="attributes">
                    <attribute name="string">VAT/TRN</attribute>
                </xpath>
            </field>
        </record>
        <record id="view_move_form_for_vat" model="ir.ui.view">
            <field name="name">account.move.form.view.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[@name='journal_div']" position="after">
                  <field name="vat" attrs="{'invisible': ['|', ('move_type','=','out_invoice'),('move_type','=','out_refund')]}"/>
                  <field name="reverse_charges" attrs="{'invisible': ['|', ('move_type','=','out_invoice'),('move_type','=','out_refund')]}"/>
    <!--               <field name="paid_customs_duty" />
                  <field name="customs_duty" attrs="{'invisible':[('paid_customs_duty','==',False)]}" /> -->
                </xpath>
                <xpath expr="//field[@name='payment_reference']" position="after">
                    <field name="vat" attrs="{'invisible': ['|', ('move_type','=','in_invoice'),('move_type','=','in_refund')]}"/>
                    <field name="bank_account" domain="[('type','=','bank'),('company_id', '=', company_id)]"
                           attrs="{'readonly': [('state','not in',('draft'))],
                                   'invisible': ['|', ('move_type','=','in_invoice'),('move_type','=','in_refund')]}"/>
                    <field name="permit_no" attrs="{'invisible': ['|', ('move_type','=','in_invoice'),('move_type','=','in_refund')]}"/>
                </xpath>
            </field>
        </record>
        <record id="account_tax_form_view" model="ir.ui.view">
            <field name="name">account.tax.form.view</field>
            <field name="model">account.tax</field>
            <field name="inherit_id" ref="account.view_tax_form" />
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="tax_code" />
                </field>
                <field name="country_code" position="after">
                    <field name="tax_transfer_account" />
                </field>
            </field>
        </record>
