        <record id="account_vat_report_view" model="ir.ui.view">
            <field name="name">VAT Return</field>
            <field name="model">vat.returns</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="VAT Returns" version="7.0">
                    <group colspan="4">
                        <field name="company_id" />
                    </group>
                    <group col="4">
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <separator string ="Report" colspan="4"/>
                    <footer>
                        <button name="check_report" string="Generate VAT Returns" type="object" class="oe_highlight"/>
                        or
                        <button string="Close" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
