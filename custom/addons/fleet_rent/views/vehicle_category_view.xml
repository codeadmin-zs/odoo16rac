    <record id="view_fleet_vehicle_model_extend" model="ir.ui.view">
        <field name="name">fleet.vehicle.model.form.extend</field>
        <field name="model">fleet.vehicle.model</field>
        <field name="inherit_id" ref="fleet.fleet_vehicle_model_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='category_id']" position="after">
                <field name="category_vehicle_fuel_id" string="Fuel Type"/>
                <field name="fuel_tank_capacity" string="Fuel Tank Capacity in L"/>
                <field name="category_vehicle_class_id"/>
                <field name="category_vehicle_transmission_id" string="Transmission"/>
                <field name="seats"/>
                <field name="doors"/>
            </xpath>
        </field>
    </record>

       <!--    Adding Menu and Action for Buffer Hours Here-->

    <record id="buffer_hour_form" model="ir.ui.view">
        <field name="name">buffer.hours.form</field>
        <field name="model">buffer.hours</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="hours" />
                    </group>

                </sheet>
            </form>

        </field>
    </record>

    <record id="buffer_hour_tree" model="ir.ui.view">
        <field name="name">buffer.hours.tree</field>
        <field name="model">buffer.hours</field>
        <field name="arch" type="xml">
            <tree>
                        <field name="hours" />
            </tree>

        </field>
    </record>

    <record id="buffer_hours_action" model="ir.actions.act_window">
        <field name="name">Buffer Hours</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">buffer.hours</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Buffer Hours
            </p>
        </field>
    </record>

    <menuitem name="Buffer Hours" action="buffer_hours_action" id="buffer_hours"
              parent="fleet.fleet_configuration" sequence="20" groups="fleet.fleet_group_manager"/>

</odoo>