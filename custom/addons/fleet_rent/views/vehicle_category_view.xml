    <record id="insurance_type_form" model='ir.ui.view'>
        <field name="name">insurance.type.form</field>
        <field name="model">insurance.type</field>
        <field name="arch" type="xml">
            <form string="Insurance Type">
                <group>
                    <field name="name" required="1"/>
                </group>
            </form>
        </field>
    </record>
    <record id="vehicle_type_action" model="ir.actions.act_window">
        <field name="name">Vehicle Product Type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">fleet.category.vehicle.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Vehicle Product Type
            </p>
        </field>
    </record>

